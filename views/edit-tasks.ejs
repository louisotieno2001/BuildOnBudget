<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Task - BuildOnBudget</title>
    <link href="/output.css" rel="stylesheet" />
    <link href="/toast.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon">
    <script defer src="/javascript/index.js"></script>
</head>

<body class="w-full bg-bg-primary text-text-primary min-h-screen flex flex-col">
    <div id="toast-container"></div>
    <div class="w-full bg-bg-primary text-text-primary min-h-screen flex flex-col items-center justify-center">
        <!-- Main (Centered Form) -->
        <main class="w-full flex-grow flex items-center justify-center px-4 py-12 min-h-screen">
            <div class="w-full max-w-2xl bg-bg-primary dark:bg-bg-primary p-8 rounded-lg animate-fadeInUp shadow-md">
                <h2 class="text-3xl font-extrabold mb-6 text-center text-gradient">Edit Task</h2>
                <form id="edit-task-form" class="space-y-6">

                    <!-- Select Project -->
                    <div>
                        <label for="project_id" class="block mb-1 font-medium">Select Project</label>
                        <select id="project_id" name="project_id" required
                            class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent">
                            <option value="">-- Select Project --</option>
                            <% projects.forEach(project => { %>
                                <option value="<%= project.id %>" <%= project.id == task.project_id ? 'selected' : '' %>><%= project.name %></option>
                            <% }) %>
                        </select>
                    </div>

                    <!-- Task Name -->
                    <div>
                        <label for="name" class="block mb-1 font-medium">Task Name</label>
                        <input type="text" id="name" name="name" required
                            class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
                            placeholder="e.g., Foundation Excavation" value="<%= task.name %>" />
                    </div>

                    <!-- Task Description -->
                    <div>
                        <label for="description" class="block mb-1 font-medium">Task Description</label>
                        <textarea id="description" name="description" rows="3"
                            class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
                            placeholder="Detailed description of the task..."><%= task.description || '' %></textarea>
                    </div>

                    <!-- Assigned To -->
                    <div>
                        <label for="assigned_to" class="block mb-1 font-medium">Assigned To</label>
                        <input type="text" id="assigned_to" name="assigned_to"
                            class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
                            placeholder="Name or team member" value="<%= task.assigned_to || '' %>" />
                    </div>

                    <!-- Priority -->
                    <div>
                        <label for="priority" class="block mb-1 font-medium">Priority</label>
                        <select id="priority" name="priority"
                            class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent">
                            <option value="low" <%= task.priority == 'low' ? 'selected' : '' %>>Low</option>
                            <option value="medium" <%= task.priority == 'medium' ? 'selected' : '' %>>Medium</option>
                            <option value="high" <%= task.priority == 'high' ? 'selected' : '' %>>High</option>
                        </select>
                    </div>

                    <!-- Status -->
                    <div>
                        <label for="status" class="block mb-1 font-medium">Status</label>
                        <select id="status" name="status"
                            class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent">
                            <option value="pending" <%= task.status == 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="in_progress" <%= task.status == 'in_progress' ? 'selected' : '' %>>In Progress</option>
                            <option value="completed" <%= task.status == 'completed' ? 'selected' : '' %>>Completed</option>
                        </select>
                    </div>

                    <!-- Timeline -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="start_date" class="block mb-1 font-medium">Start Date</label>
                            <input type="date" id="start_date" name="start_date"
                                class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
                                value="<%= task.start_date ? new Date(task.start_date).toISOString().split('T')[0] : '' %>" />
                        </div>
                        <div>
                            <label for="end_date" class="block mb-1 font-medium">End Date</label>
                            <input type="date" id="end_date" name="end_date"
                                class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
                                value="<%= task.end_date ? new Date(task.end_date).toISOString().split('T')[0] : '' %>" />
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" id="update-task-button"
                        class="w-full bg-accent text-text-primary py-2 rounded-md font-semibold hover:bg-accent/90 transition cursor-pointer">
                        Update Task
                    </button>
                </form>

                <!-- Back link -->
                <p class="mt-6 text-center text-sm text-gray-500">
                    <a href="/dashboard" class="text-accent font-medium hover:underline">Back to Dashboard</a>
                </p>
            </div>
        </main>
    </div>
    <!-- Footer -->
    <footer class="bg-bg-secondary text-text-secondary text-center py-4 mt-auto border-t border-border">
        &copy; <%= new Date().getFullYear() %> BuildOnBudget. All rights reserved.
    </footer>
    <script src="/javascript/toast.js"></script>
    <script>
        document.getElementById('edit-task-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            const taskId = '<%= task.id %>';

            const button = document.getElementById('update-task-button');
            button.disabled = true;
            button.textContent = 'Updating...';

            try {
                const response = await fetch(`/edit-task/${taskId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                if (response.ok) {
                    showToast('Task updated successfully', 'success');
                    setTimeout(() => window.location.href = '/dashboard', 1000);
                } else {
                    showToast(result.error || 'Error updating task', 'error');
                    button.disabled = false;
                    button.textContent = 'Update Task';
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred', 'error');
                button.disabled = false;
                button.textContent = 'Update Task';
            }
        });
    </script>
</body>

</html>
