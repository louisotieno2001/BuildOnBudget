<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login - BuildOnBudget</title>
  <link href="/output.css" rel="stylesheet" />
  <link href="/toast.css" rel="stylesheet" />
  <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon">
  <script defer src="/javascript/index.js"></script>
</head>

<body class="w-full bg-bg-primary text-text-primary min-h-screen flex flex-col">
  <div id="toast-container"></div>
  <div class="w-full bg-bg-primary text-text-primary min-h-screen flex flex-col items-center justify-center">
    <!-- Main (Centered Form) -->
    <main class="flex-grow flex items-center justify-center px-4 py-12 min-h-screen">
      <div class="w-full max-w-md bg-bg-primary dark:bg-bg-primary p-8 rounded-lg animate-fadeInUp">
        <h2 class="text-3xl font-extrabold mb-6 text-center text-gradient">Login to your account</h2>
        <form id="login-form" class="space-y-6">

          <!-- Email -->
          <div>
            <label for="email" class="block mb-1 font-medium">Email</label>
            <input type="email" id="email" name="email" required
              class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
              placeholder="you@example.com" />
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block mb-1 font-medium">Password</label>
            <input type="password" id="password" name="password" required
              class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
              placeholder="********" />
          </div>

          <!-- Submit Button -->
          <button type="submit"
            class="w-full bg-accent text-text-primary py-2 rounded-md font-semibold hover:bg-accent/90 transition cursor-pointer">
            Login
          </button>
        </form>

        <!-- Extra links -->
        <p class="mt-6 text-center text-sm text-gray-500">
          Donâ€™t have an account?
          <a href="/signup" class="text-accent font-medium hover:underline">Sign Up</a>
        </p>
      </div>
    </main>
  </div>
  <!-- Footer -->
  <footer class="bg-bg-secondary text-text-secondary text-center py-4 mt-auto border-t border-border">
    &copy; 2024 BuildOnBudget. All rights reserved.
  </footer>
  <script src="/javascript/toast.js"></script>
  <script src="/javascript/login.js"></script>
</body>

</html>