<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Budget - BuildOnBudget</title>
    <link href="/output.css" rel="stylesheet" />
    <link href="/toast.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon" />
    <script defer src="/javascript/index.js"></script>
</head>

<body class="w-full bg-bg-primary text-text-primary min-h-screen flex flex-col">
    <div id="toast-container"></div>
    <div class="w-full bg-bg-primary text-text-primary min-h-screen flex flex-col items-center justify-center">
        <!-- Main (Centered Form) -->
        <main class="w-full flex-grow flex items-center justify-center px-4 py-12 min-h-screen">
            <div class="w-full max-w-2xl bg-bg-primary dark:bg-bg-primary p-8 rounded-lg animate-fadeInUp shadow-md">
                <h2 class="text-3xl font-extrabold mb-6 text-center text-gradient">Edit Budget</h2>
                <form id="edit-budget-form" class="space-y-6">

                    <!-- Select Project -->
                    <div>
                        <label for="project_id" class="block mb-1 font-medium">Select Project</label>
                        <select id="project_id" name="project_id" required
                            class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent">
                            <option value="">-- Select Project --</option>
                            <% projects.forEach(project => { %>
                                <option value="<%= project.id %>" <%= project.id === budget.project_id ? 'selected' : '' %>><%= project.name %></option>
                            <% }) %>
                        </select>
                    </div>

                    <!-- Total Budget -->
                    <div>
                        <label for="totalBudget" class="block mb-1 font-medium">Total Budget</label>
                        <input type="number" id="totalBudget" name="totalBudget" required min="0" step="0.01"
                            class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
                            value="<%= budget.totalBudget %>" />
                    </div>

                    <!-- Components -->
                    <div>
                        <label for="components" class="block mb-1 font-medium">Components (JSON format)</label>
                        <textarea id="components" name="components" rows="6"
                            class="w-full border border-border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
                            placeholder='[{"name":"Materials","cost":2000},{"name":"Labor","cost":3000}]'><%= budget.components %></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" id="update-budget-button"
                        class="w-full bg-accent text-text-primary py-2 rounded-md font-semibold hover:bg-accent/90 transition cursor-pointer">
                        Update Budget
                    </button>
                </form>

                <!-- Delete Button -->
                <div class="mt-6 text-center">
                    <button id="delete-budget-button"
                        class="bg-red-600 text-white px-4 py-2 rounded-md font-semibold hover:bg-red-700 transition cursor-pointer">
                        Delete Budget
                    </button>
                </div>

                <!-- Back link -->
                <p class="mt-6 text-center text-sm text-gray-500">
                    <a href="/dashboard" class="text-accent font-medium hover:underline">Back to Dashboard</a>
                </p>
            </div>
        </main>
    </div>
    <!-- Footer -->
    <footer class="bg-bg-secondary text-text-secondary text-center py-4 mt-auto border-t border-border">
        &copy; <%= new Date().getFullYear() %> BuildOnBudget. All rights reserved.
    </footer>
    <script src="/javascript/toast.js"></script>
    <script>
        document.getElementById('edit-budget-form').addEventListener('submit', async function (e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            const budgetId = '<%= budget.id %>';

            const button = document.getElementById('update-budget-button');
            button.disabled = true;
            button.textContent = 'Updating...';

            try {
                const response = await fetch(`/edit-budget/${budgetId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                if (response.ok) {
                    showToast('Budget updated successfully', 'success');
                    setTimeout(() => window.location.href = '/dashboard', 1000);
                } else {
                    showToast(result.error || 'Error updating budget', 'error');
                    button.disabled = false;
                    button.textContent = 'Update Budget';
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred', 'error');
                button.disabled = false;
                button.textContent = 'Update Budget';
            }
        });

        document.getElementById('delete-budget-button').addEventListener('click', async function () {
            if (!confirm('Are you sure you want to delete this budget?')) {
                return;
            }
            const budgetId = '<%= budget.id %>';
            const button = this;
            button.disabled = true;
            button.textContent = 'Deleting...';

            try {
                const response = await fetch(`/budget/${budgetId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();
                if (response.ok) {
                    showToast('Budget deleted successfully', 'success');
                    setTimeout(() => window.location.href = '/dashboard', 1000);
                } else {
                    showToast(result.error || 'Error deleting budget', 'error');
                    button.disabled = false;
                    button.textContent = 'Delete Budget';
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred', 'error');
                button.disabled = false;
                button.textContent = 'Delete Budget';
            }
        });
    </script>
</body>

</html>
