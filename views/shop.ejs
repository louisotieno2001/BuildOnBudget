<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Shop - BuildOnBudget</title>
  <link href="/output.css" rel="stylesheet" />
  <link href="/toast.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon">
  <script defer src="/javascript/index.js"></script>
  <script src="/javascript/toast.js"></script>
  <script defer src="/javascript/shop.js"></script>
</head>

<body class="bg-bg-primary text-text-primary min-h-screen flex flex-col font-sans">
  <div id="toast-container"></div>

  <!-- HEADER -->
  <header class="bg-bg-secondary shadow-md sticky top-0 z-50">
    <div class="flex justify-between items-center px-4 py-3 md:px-8">
      <!-- Left: Menu + Brand -->
      <div class="flex items-center space-x-4">
        <button id="sidebar-toggle" class="md:hidden text-text-primary">
           <i class="fas fa-bars text-xl"></i>
        </button>
        <div class="flex items-center space-x-2">
          <img src="/images/logo.png" alt="Logo" class="w-8 h-8">
          <span class="text-lg font-bold text-purple-600">BuildOnBudget</span>
        </div>
      </div>
      <!-- Right: Actions -->
      <div class="flex items-center space-x-4">
        <button class="hidden sm:block bg-accent px-3 py-1 rounded-lg text-text-primary text-sm hover:opacity-90 transition cursor-pointer">
          <a href="/dashboard">Dashboard</a>
        </button>
        <a href="/cart" class="relative bg-accent px-3 py-1 rounded-lg text-text-primary text-sm hover:opacity-90 transition cursor-pointer flex items-center space-x-2">
          <i class="fas fa-shopping-cart"></i>
          <span>Cart</span>
          <span id="cart-count" class="absolute -top-2 -right-2 bg-yellow-400 text-purple-900 text-xs rounded-full h-6 w-6 flex items-center justify-center font-bold">
            <%= cartCount %>
          </span>
        </a>
        <button id="profile-toggle" class="relative">
          <img src="<%= user.profile_image || 'https://picsum.photos/200/300/?blur=2' %>"
               class="w-10 h-10 rounded-full border-2 border-border object-cover">
        </button>
        <!-- Profile Dropdown -->
        <div id="profile-dropdown" class="absolute right-4 mt-60 w-48 bg-bg-secondary rounded-lg shadow-lg py-2 border border-border cursor-pointer hidden">
          <a href="/" class="block px-4 py-2 hover:bg-bg-primary">ğŸ  Home</a>
          <a href="#settings" class="block px-4 py-2 hover:bg-bg-primary">âš™ï¸ Settings</a>
          <a href="#notifcations" class="block px-4 py-2 hover:bg-bg-primary">ğŸ”” Notifications</a>
          <a href="/logout" class="block px-4 py-2 hover:bg-bg-primary text-red-500">ğŸšª Logout</a>
        </div>
      </div>
    </div>
  </header>

  <div class="flex flex-1">

    <!-- MOBILE OVERLAY -->
    <div id="mobile-overlay" class="fixed inset-0 bg-black/50 md:hidden z-40 hidden"></div>

    <!-- SIDEBAR -->
    <aside id="sidebar"
      class="fixed md:static inset-y-0 left-0 w-72 bg-bg-secondary border-r border-bg-secondary z-50 transform transition-transform duration-300 md:translate-x-0 cursor-pointer">
        
      <div class="flex flex-col h-full">
       <!-- Sidebar Title -->
        <div class="px-4 py-3 flex items-center space-x-3">
          <h3 class="text-lg font-semibold">Filters</h3>
        </div>

        <!-- Filter Options -->
        <nav class="flex-1 overflow-y-auto px-4 py-6">
          <ul class="space-y-2">
            <li>
              <div class="mb-4">
                <label class="block text-sm font-medium mb-2">Search</label>
                <input type="text" id="search" placeholder="ğŸ” Search materials..." class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-accent">
              </div>
            </li>
            <li>
              <div class="mb-4">
                <label class="block text-sm font-medium mb-2">Category</label>
                <select id="category" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-accent bg-bg-primary">
                  <option value="">All Categories</option>
                  <option value="tools">ğŸ”§ Tools</option>
                  <option value="materials">ğŸ—ï¸ Materials</option>
                  <option value="equipment">âš™ï¸ Equipment</option>
                  <option value="roofing">ğŸ  Roofing</option>
                </select>
              </div>
            </li>
            <li id="subcategory-section" class="hidden">
              <div class="mb-4">
                <label class="block text-sm font-medium mb-2">Subcategory</label>
                <select id="subcategory" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-accent bg-bg-primary">
                  <option value="">All Subcategories</option>
                  <!-- Subcategories will be populated dynamically -->
                </select>
              </div>
            </li>
          </ul>
        </nav>
      </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-4 md:p-8 space-y-8 overflow-y-auto">
      <div class="space-y-6">
        <h2 class="text-3xl font-bold">ğŸ›’ Shop</h2>
        <p class="text-text-secondary">Browse and purchase construction materials.</p>

        <!-- Items Grid -->
        <div id="items-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <% items.forEach(item => { %>
            <div class="bg-bg-secondary rounded-xl p-4 shadow hover:shadow-lg transition flex flex-col" data-name="<%= item.name %>" data-description="<%= item.description || '' %>" data-category="<%= item.category || '' %>" data-subcategory="<%= item.sub_category || '' %>">
              <img src="<%= item.media ? item.media.url : '/images/logo.png' %>" alt="<%= item.name %>" class="w-full h-32 object-cover rounded mb-2">
              <h4 class="text-lg font-semibold mb-1"><%= item.name %></h4>
              <p class="text-text-secondary text-sm mb-2 line-clamp-2 flex-grow"><%= item.description || 'High-quality construction material' %></p>
              <p class="text-lg font-bold text-accent mb-2">$<%= parseFloat(item.price).toFixed(2) %></p>
              <button data-id="<%= item.id %>" class="add-to-cart-btn bg-accent text-text-primary px-4 py-2 rounded-lg hover:bg-accent/90 transition w-full cursor-pointer">
                <i class="fas fa-cart-plus mr-2"></i>Add to Cart
              </button>
            </div>
          <% }) %>
        </div>
      </div>
    </main>
  </div>

  <!-- FOOTER -->
  <footer class="bg-bg-secondary text-text-secondary text-center py-4 border-t border-border">
    &copy; <%= new Date().getFullYear() %> BuildOnBudget. All rights reserved.
  </footer>

  <script src="/javascript/toast.js"></script>
</body>

</html>
